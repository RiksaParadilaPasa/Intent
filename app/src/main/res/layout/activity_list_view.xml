<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListViewActivity"
    android:orientation="vertical">
    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:paddingLeft="20dp"
        android:background="#ECECEC"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_cuaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/ic_ac_unit_black_24dp"
            android:background="#ECECEC"/>
        <Button
            android:id="@+id/btn_inputUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/ic_input_black_24dp"
            android:background="#ECECEC"/>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/ic_android_black_24dp"
            android:background="#ECECEC"/>
        <Button
            android:id="@+id/btn_abc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc"
            android:background="#ECECEC"/>

    </LinearLayout>
</RelativeLayout>